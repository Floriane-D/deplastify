<h2 style="text-align: center">Register your store:</h2>

<%= simple_form_for @store do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :phone %>
  </div>

  <div class="form-actions" style="text-align: center">
    <%= f.submit class: 'btn btn-primary', value: "Register" %>
  </div>
<% end %>

