<div class="container-mobile col-lg-4 col-sm-6 col-xs-12">
  <div class="main-content">
    <br>
    <h3>Register your store:</h3>


    <%= simple_form_for @store do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address, input_html: { class: 'address-auto' }, as: :string %>
        <%= f.input :description %>
        <%= f.input :phone %>
        <%= f.input :picture, :label => "Add a picture of your store" %>
        <%= f.input :picture_cache, as: :hidden %>
      </div>

      <div class="form-actions" style="text-align: center">
        <%= f.submit class: 'btn btn-primary', value: "Register" %>
      </div>
    <% end %>
  </div>
</div>
