<% @store.benefits.each do |benefit| %>
  <div class="card-benefit">
    <!-- <img src="../../assets/images/green-sale.jpg> -->
    <div class="card-benefit-infos">
      <h3><%= benefit.name %></h3>
      <p><%= benefit.description %></p>
    </div>
    <div class="card-benefit-modif">
      <% if policy(benefit).edit? %>
        <%= link_to edit_store_benefit_path(@store, benefit) do %>
          <i class="far fa-edit"></i>
        <% end %>
      <% end %>
      <% if policy(benefit).destroy? %>
        <%= link_to store_benefit_path(@store, benefit), data: { confirm: "Are you sure?" }, method: :delete do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      <% end %>

      <%= link_to "I want this voucher!", store_benefit_vouchers_path(@store, benefit), method: :post, class: "btn btn-primary" %>

    </div>
  </div>
<% end %>
