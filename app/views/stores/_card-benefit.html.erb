<% @store.benefits.each do |benefit| %>
  <div class="card-benefit">
    <div class="card-benefit-infos">
      <h3><%= benefit.name %></h3>
      <p><%= benefit.description %></p>
    </div>
    <div class="card-benefit-modif">
      <div class="card-benefit-mini-btn">
        <% if policy(benefit).edit? %>
          <%= link_to edit_store_benefit_path(@store, benefit) do %>
            <i class="far fa-edit" style="color:#1D4267"></i>
          <% end %>
        <% end %>
        <% if policy(benefit).destroy? %>
          <%= link_to store_benefit_path(@store, benefit), data: { confirm: "Are you sure?" }, method: :delete do %>
            <i class="fas fa-trash-alt" style="color:#1D4267"></i>
          <% end %>
        <% end %>
      </div>
      <div class="card-benefit-button">
        <% if policy(benefit).edit? == false %>
          <%= link_to "Get the voucher!", store_benefit_vouchers_path(@store, benefit), method: :post, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
