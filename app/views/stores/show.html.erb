<div class="container">

  <div class="info-box">

    <div class="picture-box">
      <%= cl_image_tag @store.picture, :height=>400, :width=>400, :crop=>"fill", class: "framed-picture" %>
    </div>

    <div class="description-box">
      <h1 class="text-center"><%= @store.name %></h1>

      <p class="text-center"><i class="fas fa-map-marker-alt"></i> <%= @store.address %></p>

      <p class="text-center" id="phone"><i class="fas fa-phone"></i> <%= @store.phone %></p>
    </div>

    <% unless @store.benefits.empty? %>
      <div class="benefit-box">
        <%= render 'card-benefit', store: @store %>
      </div>
    <% end %>

    <div class="about-box">
      <p class="text-center"><strong>About:</strong></p>

      <p class="text-center" id="store-description"><%= @store.description %></p>
    </div>


     <div class="button-collection">
      <%= link_to "Back to results", results_path, class: "btn btn-primary" %>
      <% if policy(@store).edit? %>
      <%= link_to "Add a benefit", new_store_benefit_path(@store), class: "btn btn-primary" %>
      <% end %>

      <% if policy(@store).edit? %>
        <%= link_to "Edit this store", edit_store_path(@store), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>




