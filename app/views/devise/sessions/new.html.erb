<div class="container-mobile col-lg-4 col-sm-6 col-xs-12">
  <div class="main-content">
    <br>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to icon('fab', 'facebook') + " Log in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-primary' %>
      <% end %>
    <% end %>


    <h6>Log in with your e-mail:</h6>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    :label => "E-mail:" %>
        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "current-password" },
                    :label => "Password:" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions" style="text-align: center">
        <%= f.submit class: 'btn btn-primary', value: "Log in" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>

  </div>
</div>

