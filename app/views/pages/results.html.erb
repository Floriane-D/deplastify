<%= simple_form_for(:search, url: results_path, method: :get, html: {id: "search_form"}) do |f| %>
    <%= f.input :address, id: 'search_address' %>
    <div class="buttons">
    <%= f.submit class: 'btn btn-primary', value: "Search" %>
    <a href="#" class="btn btn-primary" id="location">Find near me</a>
    </div>
  <% end %>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
