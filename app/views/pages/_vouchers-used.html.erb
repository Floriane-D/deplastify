<% vouchers_used = @vouchers.select {|voucher| voucher.status == "Used"} %>
<% if vouchers_used.empty? == false %>
  <h4>Your used benefits:</h4>
  <p>Congratulations! Thanks to your ecofriendly contribution, you already enjoyed the following discounts:</p>
    <ol class="unordered-list">
      <% vouchers_used.each do |voucher| %>
        <li>
          <div class = "benefit-card">
            <div class = "date"> <%= voucher.benefit.updated_at.strftime("%d/%m/%Y") %>
            <%= link_to voucher.benefit.store.name, store_path(voucher.benefit.store)%>
            </div>
            <div class = "benefit-card-info">
              <p><%= voucher.benefit.description %></p>
            </div>
          </div>
        </li>
      <% end %>
    </ol>
<% end %>


