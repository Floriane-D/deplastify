<div class="banner" style="background-image: url('<%= image_path "temp-background.jpg" %>');">

  <div class="banner-main-content col-lg-4 col-sm-6 col-xs-12">

    <h1> Deplastify! </h1>
      <%= simple_form_for(:search, url: results_path, method: :get, html: {id: "search_form"}) do |f| %>
        <%= f.input :address, input_html: { class: 'address-auto' }, :label => "Find a store near an address:", :label_html => { :class => 'h5' } %>
        <div style="text-align: center">
        <%= f.submit class: 'btn btn-primary', value: "Search" %>
        </div>
        <br>
      <% end %>
      <p>or</p>
      <div class="text-center">
          <a href="#" class="btn btn-primary" id="my-location">Find near me</a>
      </div>

  </div>

</div>
